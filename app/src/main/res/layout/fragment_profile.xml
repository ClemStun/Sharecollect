<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Image de profil ronde -->
        <ImageView
            android:id="@+id/imageViewProfilePicture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile_black_24dp"
            android:contentDescription="@string/desc_profile_picture"
            android:background="@drawable/circle_profile_picture"/>

        <!-- Pseudo -->
        <TextView
            android:id="@+id/textViewPseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Adresse mail -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <!-- Bouton pour modifier les informations -->
        <Button
            android:id="@+id/ButtonEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/edit_profile"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>